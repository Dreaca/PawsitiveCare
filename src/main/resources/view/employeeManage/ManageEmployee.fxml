<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="employeeAnchor" prefHeight="749.0" prefWidth="1035.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ManageEmployeeController">
   <children>
      <VBox fx:id="empVbox" layoutX="14.0" layoutY="79.0" prefHeight="639.0" prefWidth="1009.0">
         <children>
            <!-- Smaller card-like layout inside an AnchorPane -->
            <HBox fx:id="employeeHbox" prefHeight="363.0" prefWidth="1009.0" style="-fx-background-radius: 25;">
               <children>
                  <AnchorPane fx:id="employeeCard" prefHeight="363.0" prefWidth="353.0" style="-fx-background-color: white;" />
               </children>
            </HBox>
            <!-- Additional smaller card-like layouts (HBox + AnchorPane) can be added within the VBox for multiple employees -->
         </children>
      </VBox>
      <JFXButton fx:id="btnAddEmployee" buttonType="RAISED" layoutX="603.0" layoutY="14.0" onAction="#addnewEmployee" prefHeight="52.0" prefWidth="158.0" style="-fx-background-color: black;" text="Add new Employee" textFill="#f5eded" />
      <JFXButton fx:id="btnUpdateEmployee" buttonType="RAISED" layoutX="798.0" layoutY="13.0" onAction="#updateOnAction" prefHeight="51.0" prefWidth="152.0" style="-fx-background-color: purple;" text="Update" textFill="#fcf3f3" />
   </children>
</AnchorPane>
